<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

    <record id="view_library_book_form" model="ir.ui.view">
      <field name="name">view.library.book.form</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <form name="demo data form">
          <sheet>
              <field name="image" widget="image" />

            <group>
              <field name="name"/>
              <field name="active"/>
            </group>
              <group>
                   <field name="description"/>

              </group>

          </sheet>
        </form>
      </field>

    </record>

    <record id="view_library_book_tree" model="ir.ui.view">

      <field name="name">view.library.book.tree</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <tree string="Tree Book">

          <field name="name"/>
          <field name="active"/>
          <field name="description"/>

        </tree>

      </field>

    </record>
<!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_library_book">
      <field name="name">action.library.book</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">library.book</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->


    <!-- Top menu item -->

    <menuitem name="library" id="library_menu_root" sequence="1"/>
    <menuitem name="book" id="library_book_menu_category" parent="library_menu_root" sequence="1"/>
    <menuitem name="book" id="action_library_book_menu" parent="library_book_menu_category" action="action_library_book" sequence="1"/>
